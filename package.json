{
  "name": "collaborative-editor",
  "version": "1.0.0",
  "description": "A full-stack real-time collaborative code editor with AI/LLM integration using the MERN stack",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --prefix-colors \"bgBlue.bold,bgMagenta.bold\" --prefix \"[{name}]\" --names \"SERVER,CLIENT\" \"npm run server\" \"npm run client\"",
    "server": "cd realtime-server && npm run dev",
    "client": "cd editor-app && npm run dev",
    "start": "concurrently --kill-others-on-fail --prefix-colors \"bgBlue.bold,bgMagenta.bold\" --prefix \"[{name}]\" --names \"SERVER,CLIENT\" \"npm run server:prod\" \"npm run client:build\"",
    "server:prod": "cd realtime-server && npm start",
    "client:build": "cd editor-app && npm run build && npm start",
    "install:all": "npm install && npm install --prefix editor-app && npm install --prefix realtime-server",
    "clean": "rimraf node_modules editor-app/node_modules realtime-server/node_modules",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "collaborative",
    "editor",
    "realtime",
    "socket.io",
    "nextjs",
    "mern"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
